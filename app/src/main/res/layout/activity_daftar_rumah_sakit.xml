<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPurple"
    android:padding="0dp"
    tools:context=".DaftarRumahSakit">

    <Button
        android:id="@+id/btnBackRs"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_arrow_back_black_24dp"></Button>

    <TextView
        android:id="@+id/textRS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Daftar Rumah Sakit Rujukan"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vico"
        android:layout_width="60dp"
        android:layout_height="42dp"
        android:layout_below="@+id/textRS"
        android:layout_marginTop="5dp"
        android:text="E-ViCo"
        android:textColor="@color/lightGray"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"/>

    <ListView

        android:id="@+id/listView1"
        android:layout_below="@+id/vico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite">

    </ListView>

</RelativeLayout>

