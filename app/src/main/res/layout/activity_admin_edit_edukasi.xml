<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#7966FE">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#7966FE"
        tools:context=".AdminEditEdukasiActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="0dp">
            <TextView
                android:id="@+id/TvTitleKE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Konten Edukasi"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="#FFFFFF">
            </TextView>

            <TextView
                android:id="@+id/TvTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-Vico19"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#FFFFFF">
            </TextView>


            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="410dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/rr_kotaklogin"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/TVIdKonten"
                    android:enabled="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="ID Konten"
                    android:textColor="@color/colorPurple"></TextView>

                <EditText
                    android:id="@+id/EditIdKonten"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rr_etstyle"
                    android:inputType="text"
                    android:enabled="false"
                    android:paddingLeft="5dp" />

                <TextView
                    android:id="@+id/TVJdlKonten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Judul Konten"
                    android:textColor="@color/colorPurple"></TextView>

                <EditText
                    android:id="@+id/EditJdlKonten"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rr_etstyle"
                    android:inputType="text"
                    android:paddingLeft="5dp" />

                <TextView
                    android:id="@+id/TvIsiKonten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Isi Konten"
                    android:textColor="@color/colorPurple"></TextView>

                <EditText
                    android:id="@+id/EditIsiKonten"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rr_etstyle"
                    android:inputType="text|textMultiLine"
                    android:paddingLeft="5dp" />

                <Button
                    android:id="@+id/btnUpdateEdukasi"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rr_buttonsttyle"
                    android:text="Update"
                    android:textColor="@color/colorWhite"></Button>

                <Button
                    android:id="@+id/btnUpdateBack"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rr_buttonstyle3"
                    android:text="Back"
                    android:textColor="@color/colorWhite"></Button>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>