<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/gambaricon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/icon"></ImageView>

        <TextView
            android:id="@+id/TvAwal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kawal Covid Bersama E - Vico Apps"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorBlack">
        </TextView>

        <TextView
            android:id="@+id/LTvSAwal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikasi yang dapat memberikan edukasi"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorGray">
        </TextView>

        <TextView
            android:id="@+id/LTvSAwal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dan informasi kepada masyarakat"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:textColor="@color/colorGray">
        </TextView>

        <TextView
            android:id="@+id/LTvSAwal3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tentang Covid 19"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:textColor="@color/colorGray">
        </TextView>

        <Button
            android:id="@+id/btn_registt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Create Account"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/rr_buttonsttyle"></Button>

        <Button
            android:id="@+id/btn_loginn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Login to Account"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/rr_buttonstyle2"
            android:textColor="@color/colorPurple"></Button>

    </LinearLayout>

</LinearLayout>