<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPurple"
    android:padding="0dp"
    tools:context=".DaftarRumahSakit">

    <Button
        android:id="@+id/btnBackListEdukasi"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_arrow_back_black_24dp"></Button>

    <TextView
        android:id="@+id/textEdukasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Pusat Edukasi"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="42dp"
        android:layout_below="@+id/textEdukasi"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"
        android:text="E-ViCo"
        android:layout_centerHorizontal="true"
        android:textColor="@color/lightGray"
        android:textSize="18dp" />

    <ListView
        android:id="@+id/listViewEdukasi"
        android:layout_below="@+id/textEdukasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:background="@color/colorWhite">

    </ListView>

</RelativeLayout>

