<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPurple"
        tools:context=".DashboardAdmin">

        <TextView
            android:id="@+id/TvJdlHU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-ViCo19"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="30dp"
            android:fontFamily="Roboto"
            android:textSize="16sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/TvKetJud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dashboard Admin"
            android:textColor="@color/lightGray"
            android:layout_marginBottom="30dp"
            android:fontFamily="Roboto"
            android:textSize="13sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rr_kotakhalutama"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:padding="25dp"
                android:layout_gravity="center"
                android:background="@drawable/rr_kotakhalutama"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="150dp"
                    android:background="@drawable/rr_kmhalutama"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_AdminEdukasi"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/ic_school_black_24dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        ></Button>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Kelola Konten Edukasi"
                        android:textColor="@color/lightGray"
                        android:gravity="center"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rr_kmhalutama"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_AdminRsRujukan"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/ic_local_hospital_black_24dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"></Button>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Kelola RS Rujukan"
                        android:textColor="@color/lightGray"></TextView>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:padding="25dp"
                android:background="@drawable/rr_kotakhalutama">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rr_kmhalutama"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_Logout"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/ic_exit_to_app_black_24dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"></Button>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Logout"
                        android:textColor="@color/lightGray"
                        android:gravity="center"></TextView>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>
</ScrollView>